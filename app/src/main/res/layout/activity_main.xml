<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragmentMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_bordercolor">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Create New Note"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="SAVE"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etTitle"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Title"
            android:background="@drawable/custom_border"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Description"
            android:background="@drawable/custom_border"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_marginTop="230dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Remind me at:"
            android:layout_marginHorizontal="20dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_marginTop="260dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="14:20"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="04/03/2016"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="325dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Type:"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="50dp">
                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Work" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="375dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Tags:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvTags"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Android, VTC, FPT, Game"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="425dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Weeks:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvWeeks"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Mon, Thu, Sat"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTune"
            android:layout_marginTop="480dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="Tune"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/custom_border"/>
    </RelativeLayout>
</layout>